{
  "name": "stencil-electron-app-starter",
  "productName": "Stencil Electron Starter",
  "private": true,
  "main": "./Electron/App.js",
  "version": "0.0.1",
  "description": "Minimal starter project for building an Electron app with Stencil.",
  "scripts": {
    "build": "stencil build",
    "dev": "ts-node ./scripts/dev.ts",
    "lint": "eslint \"src/**/*{.ts,.tsx}\"",
    "start": "npm run dev",
    "test": "jest",
    "test.watch": "jest --watch",
    "packager": "npm run build && npx electron-packager . --out test2 --platform=linux,win32 --overwrite --icon=./src/assets/icon/icon"
  },
  "dependencies": {
    "@stencil/router": "^1.0.1",
    "electron-reload": "2.0.0-alpha.1",
    "electron-serve": "^1.1.0",
    "electron-store": "^8.0.0",
    "node-notifier": "^10.0.0",
    "pkg-up": "^3.1.0"
  },
  "devDependencies": {
    "@stencil/core": "^2.6.0",
    "@stencil/eslint-plugin": "0.3.1",
    "@types/jest": "^26.0.24",
    "@types/node-notifier": "8.0.1",
    "@types/shelljs": "^0.8.9",
    "@typescript-eslint/eslint-plugin": "4.29.0",
    "@typescript-eslint/parser": "4.29.0",
    "electron": "^13.1.8",
    "electron-builder": "^22.11.7",
    "electron-packager": "^15.3.0",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-react": "7.24.0",
    "jest": "^27.0.6",
    "node-gyp": "^8.1.0",
    "prettier": "2.3.2",
    "rollup-plugin-node-polyfills": "0.2.1",
    "shelljs": "^0.8.4",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5",
    "workbox-build": "6.2.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mitchellsimoens/stencil-electron-app-starter.git"
  },
  "author": {
    "name": "Mitchell Simoens",
    "email": "hi@mitchell.io"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mitchellsimoens/stencil-electron-app-starter"
  },
  "homepage": "https://github.com/mitchellsimoens/stencil-electron-app-starter",
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/node_modules/@stencil/core/testing/jest.preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "jsx"
    ]
  },
  "build": {
    "productName": "MyApp",
    "compression": "store",
    "forceCodeSigning": false,
    "asar": false,
    "win": {
      "icon": "/project/src/assets/icon/icon.ico"
    }
  }
}
